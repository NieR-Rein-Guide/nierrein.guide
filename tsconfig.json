{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"],
      "@models/*": ["models/*"],
      "@libs/*": ["libs/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"]
    },
    "sourceMap": true,
    "outDir": "dist",
    "incremental": true
  },
  "include": ["./global-types.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
